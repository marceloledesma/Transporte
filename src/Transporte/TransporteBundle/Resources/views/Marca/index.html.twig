{% extends '::base.html.twig' %}

{% block body -%}

<div class="callout primary large-text-center">
    <h1>Marca list</h1>

    <table class="large-centered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('marca_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.descripcion }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('marca_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('marca_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="button hollow" href="{{ path('marca_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
</div>
    {% endblock %}
